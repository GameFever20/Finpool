<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transactionAdapter_heading_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Reliance Small Cap Fund"
                android:textColor="@color/headingColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transactionAdapter_id_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="2dp"
                android:text="12345678"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/transactionAdapter_name_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ABHISHEK"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/transactionAdapter_date_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="28-04-2017"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transactionAdapter_amount_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18000"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Price"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transactionAdapter_purchasePrice_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="18250"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Units"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transactionAdapter_unit_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="140"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheme Type"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transactionAdapter_schemeType_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5676%"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trans. Type"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transactionAdapter_transType_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redemption"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>