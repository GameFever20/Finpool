<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">




            <TextView
                android:id="@+id/groupAdapter_heading_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reliance Small Cap Fund"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:alpha="0.7"
                        android:textAlignment="center"
                        android:textColor="@color/colorRed"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/groupAdapter_phoneNumber_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:alpha="0.8"
                        android:textColor="@color/colorRed"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/groupAdapter_email_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23-01-2018"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:layout_gravity="end"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User ID"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/groupAdapter_userid_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/groupAdapter_password_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23-01-2018"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>