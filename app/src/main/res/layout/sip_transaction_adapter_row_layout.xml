<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sipAdapter_id_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345678"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/sipAdapter_heading_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reliance Small Cap Fund"
                android:textColor="@color/headingColor"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIP Amount"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sipAdapter_sipAmount_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:fontFamily="serif"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current  Inv"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sipAdapter_currentInv_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18000"
                        android:fontFamily="serif"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Val"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sipAdapter_currentVal_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18250"
                        android:textAlignment="center"
                        android:fontFamily="serif"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abs Return"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sipAdapter_absReturn_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5676"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Div Inv"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sipAdapter_divInv_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.12"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Div Pay"
                        android:textAlignment="center"
                        android:textColor="@color/lightTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sipAdapter_divPay_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.567"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>